<Window x:Class="Project.SmoothMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smooth UI - Production Control"
        WindowStartupLocation="CenterScreen"
        Width="900" Height="600"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">

  <!-- Main container with rounded corners and slight border -->
  <Border CornerRadius="20"
            Background="#FAFAFA"
            BorderThickness="2"
            BorderBrush="#B0B0B0"
            Padding="10"
            Margin="10">

    <Grid>
      <Grid.RowDefinitions>
        <!-- Row 1: Top bar with close/minimize or any top actions -->
        <RowDefinition Height="50"/>
        <!-- Row 2: Main content (search box, buttons, etc.) -->
        <RowDefinition/>
      </Grid.RowDefinitions>

      <!-- ===========================
                 TOP BAR (Title, Drag, Exit)
                 =========================== -->
      <Grid Grid.Row="0" Background="#EFEFEF">
        <Grid.ColumnDefinitions>
          <ColumnDefinition/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Title or some top text -->
        <TextBlock Text="Production Control System"
                           VerticalAlignment="Center"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="20,0,0,0"
                           Foreground="Black"/>

        <!-- "Close" button or similarly in top-right corner -->
        <Button x:Name="BtnClose"
                        Grid.Column="1"
                        Width="40"
                        Height="25"
                        Margin="0,10,10,10"
                        Background="#FF6961"
                        Cursor="Hand"
                        VerticalAlignment="Center"
                        ToolTip="Close Window"
                        Click="BtnClose_Click">
          <!-- You could use an icon or simple text -->
          <TextBlock Text="X" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Button>
      </Grid>

      <!-- ========================
                 MAIN CONTENT (Row 2)
                 ======================== -->
      <Grid Grid.Row="1" Margin="0,20,0,0">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- ==============
                     Search Area
                     ============== -->
        <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Margin="0,40,0,0"
                            Width="400">
          <TextBlock Text="Search Database"
                               FontSize="14"
                               FontWeight="Bold"
                               HorizontalAlignment="Left"
                               Margin="0,0,0,5"/>

          <!-- This border simulates a search box with rounded corners -->
          <Border Background="White"
                            BorderBrush="#C0C0C0"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="5"
                            Width="400">
            <StackPanel Orientation="Horizontal">
              <TextBox x:Name="TxtSearch"
                                     Width="330"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     VerticalAlignment="Center"
                                     ToolTip="Type here to search..."/>
              <Button x:Name="BtnSearch"
                                    Content="Search"
                                    Margin="5,0,0,0"
                                    Cursor="Hand"
                                    Padding="8,2"
                                    Click="BtnSearch_Click">
                <Button.Template>
                  <ControlTemplate TargetType="Button">
                    <Border CornerRadius="8" Background="#008CBA">
                      <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,0"/>
                    </Border>
                  </ControlTemplate>
                </Button.Template>
              </Button>
            </StackPanel>
          </Border>

          <!-- HOVER POPUP (simulate a dropdown with 4 items) -->
          <Popup x:Name="SearchPopup"
                           PlacementTarget="{Binding ElementName=TxtSearch}"
                           Placement="Bottom"
                           StaysOpen="False">
            <Border Background="#FFFFFF"
                                CornerRadius="8"
                                BorderThickness="1"
                                BorderBrush="#B0B0B0"
                                Width="400"
                                Padding="5">
              <StackPanel>
                <!-- 1st item -->
                <TextBlock Text="1) Motorblock" Margin="5" FontWeight="Bold"/>
                <!-- 2nd item -->
                <TextBlock Text="2) Getriebe" Margin="5"/>
                <!-- 3rd item -->
                <TextBlock Text="3) Karosserie" Margin="5"/>
                <!-- 4th item (half-faded) -->
                <TextBlock Text="4) Elektronikmodul" Margin="5" Opacity="0.5"/>
              </StackPanel>
            </Border>
          </Popup>
        </StackPanel>

        <!-- ==============
                     Buttons on the left or right side
                     ============== -->
        <StackPanel Orientation="Vertical"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Margin="40,0,0,0">
          <!-- "Add" Button with arrow (just an example) -->
          <Button x:Name="BtnAdd"
                            Content="Add"
                            Margin="0,10,0,10"
                            Padding="15,5"
                            Cursor="Hand"
                            ToolTip="Click to add a new record">
            <Button.Template>
              <ControlTemplate TargetType="Button">
                <Border CornerRadius="8" Background="#90EE90">
                  <StackPanel Orientation="Horizontal" Margin="8,0">
                    <!-- Arrow or icon (using a Path) -->
                    <Path Data="M 0,10 L 20,10 L 15,5 M 20,10 L 15,15"
                                              Stroke="Black" StrokeThickness="2"
                                              VerticalAlignment="Center"
                                              Margin="0,0,5,0"/>
                    <ContentPresenter VerticalAlignment="Center"/>
                  </StackPanel>
                </Border>
              </ControlTemplate>
            </Button.Template>
          </Button>

          <!-- "Edit" Button -->
          <Button x:Name="BtnEdit"
                            Content="Edit"
                            Margin="0,10,0,10"
                            Padding="15,5"
                            Cursor="Hand"
                            ToolTip="Click to edit a record">
            <Button.Template>
              <ControlTemplate TargetType="Button">
                <Border CornerRadius="8" Background="#FFD166">
                  <StackPanel Orientation="Horizontal" Margin="8,0">
                    <Path Data="M 0,10 L 20,10 L 15,5 M 20,10 L 15,15"
                                              Stroke="Black" StrokeThickness="2"
                                              VerticalAlignment="Center"
                                              Margin="0,0,5,0"/>
                    <ContentPresenter VerticalAlignment="Center"/>
                  </StackPanel>
                </Border>
              </ControlTemplate>
            </Button.Template>
          </Button>

          <!-- "Delete" Button -->
          <Button x:Name="BtnDelete"
                            Content="Delete"
                            Margin="0,10,0,10"
                            Padding="15,5"
                            Cursor="Hand"
                            ToolTip="Click to delete a record">
            <Button.Template>
              <ControlTemplate TargetType="Button">
                <Border CornerRadius="8" Background="#EF8080">
                  <StackPanel Orientation="Horizontal" Margin="8,0">
                    <Path Data="M 0,10 L 20,10 L 15,5 M 20,10 L 15,15"
                                              Stroke="Black" StrokeThickness="2"
                                              VerticalAlignment="Center"
                                              Margin="0,0,5,0"/>
                    <ContentPresenter VerticalAlignment="Center"/>
                  </StackPanel>
                </Border>
              </ControlTemplate>
            </Button.Template>
          </Button>
        </StackPanel>
      </Grid>
    </Grid>
  </Border>
</Window>
